<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "outfox.springboot.mapper.FanyiMapper">

    <insert id="insert" parameterType="outfox.springboot.entity.Fanyi">
        INSERT INTO fanyi(devToken, imei) VALUES (#{devToken}, #{imei})
    </insert>

    <select id = "findFirstLine" resultType="outfox.springboot.entity.Fanyi">
        SELECT * FROM fanyi LIMIT 1;
    </select>

    <update id="updateByID" parameterType="outfox.springboot.entity.Fanyi">
        UPDATE fanyi SET devToken = #{devToken}, imei = #{imei} WHERE id = #{id}
    </update>

    <delete id="deleteFanyiByID" parameterType="java.lang.Integer">
        DELETE FROM fanyi WHERE id = #{id}
    </delete>
</mapper>