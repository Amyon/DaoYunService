<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "lu.springboot.mapper.SchoolInformationMapper">

    <select id = "findSchoolInfoById" parameterType="lu.springboot.entity.SchoolInformation"
            resultType="lu.springboot.entity.SchoolInformation">
        SELECT * FROM SchoolInformation where ID = #{ID};
    </select>

    <select id = "ExistSchoolInfo" parameterType="lu.springboot.entity.SchoolInformation"
            resultType="lu.springboot.entity.SchoolInformation">
        SELECT * FROM SchoolInformation where college = #{college} and Faculty = #{Faculty} and Major = #{Major};
    </select>

    <insert id="insert" parameterType="lu.springboot.entity.SchoolInformation">
        INSERT INTO SchoolInformation(college, Faculty, Major) VALUES (#{college}, #{Faculty}, #{Major})
        <selectKey keyProperty="ID" order="AFTER" resultType="int">
            select LAST_INSERT_ID()
        </selectKey>
    </insert>

